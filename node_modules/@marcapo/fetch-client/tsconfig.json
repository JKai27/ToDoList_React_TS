{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2017", "es7", "es6", "dom"],
    "outDir": "lib",
    "strict": true,
    "jsx": "react",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationDir": "lib",
    "typeRoots": ["./node_modules/@types", "./types"],
    "downlevelIteration": true,
    "allowJs": true,
    "skipLibCheck": true
  },

  "exclude": ["node_modules", "lib"]
}
